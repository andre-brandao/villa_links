---
import LinkButton from "../lib/LinkButton.astro";
import ShareButton from "../lib/ShareButton.astro";
---

<html lang="pt">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <style>
      .background {
        background-image: url("/background.jpeg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed; /* Optional: Makes the background fixed when scrolling */
        flex: 1;
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <header
      class="flex items-center justify-center py-8 bg-opacity-80 w-full fixed top-0 z-10"
    >
      <img
        src="/logo.png"
        alt="Villa Rica Pousada Boutique"
        height="100"
        width="100"
      />
    </header>

    <div
      class="background flex flex-col items-center justify-end gap-4 w-full p-4"
    >
      <div class="flex flex-col gap-4 max-md:w-full w-1/2">
        <LinkButton
          href={`https://wa.me/5531983861852?text=${encodeURIComponent("Mensagem Padrao Pro WhatsApp")}`}
          highlight={true}
        >
          WhatsApp
        </LinkButton>
        <LinkButton href="https://www.villaricapousada.com.br/br/reserva">
          Site Reservas
        </LinkButton>
        <LinkButton href="https://cafedavilla.umenu.app"> Cardapio</LinkButton>
        <LinkButton href="https://www.villaricapousada.com.br/br/a-pousada">
          Fotos
        </LinkButton>

        <ShareButton />
      </div>
    </div>
  </body>
</html>
